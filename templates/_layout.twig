{% set midnight = now|date_modify("+1 day")|date("Y-m-d") ~ ' 00:00' %}
{% set cdnUrl = craft.config.cdnUrl ?? siteUrl %}
{% set LP = craft.app.request.isLivePreview ?? false %}

<!doctype html>
{% if craft.config.env == 'PROD' %}{% include '_admin/_mustasj_logo' %}{% endif %}
<html class="no-js" lang="{{craft.app.language}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimal-ui">
		{% hook "seo" %}
		{% include "_admin/_ekstraHead" %}
		{% if craft.app.request.isLivePreview %}
		<!-- Ã…pne alle linker i nytt vindu hvis vi er i previewmodus -->
		<script type="text/javascript">
			var links = document.links;
			for (var i = 0; i < links.length; i++) {
				links[i].target = "_blank";
			}
		</script>
		{% endif %}
	</head>
	<body class="{{ bodyClass is defined ? bodyClass }}">
	{% include '_admin/_maintenanceBanner' %}
		<!--[if lt IE 7]>
			<p class="browsehappy">You are using a <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
		<![endif]-->

		<header id="topHeader">
			<nav>
			<a href="/" class="logo"></a>

			{% set entries = craft.entries.section('sider').all() %}

			<ul id="desktop_nav-ul">
				{% nav entry in entries %}
				<li class="{% if entry.children|length %}has-children{% endif %}">
						<a href="{{ entry.side[0].url }}">{{ entry.title }}</a>

						{% ifchildren %}
								<ul class="nav__level2">
										{% children %}
								</ul>
						{% endifchildren %}
				</li>
				{% endnav %}

				<span class="menu-logo">
					{{craft.inlin.er(footer.bilde[0].url, true) | raw }}
				</span>

			</ul>

			<a href="/" id="menu-btn">Meny</a>

			{% macro addNodeToNavigation(node, index) %}
			    {%- set nodeClasses = [] -%}
			    {%- if node.hasChildren -%}
			        {%- set nodeClasses = nodeClasses|merge(['has-children']) -%}
			    {%- endif -%}
			    {%- if node.active or node.hasActiveChild -%}
			        {%- set nodeClasses = nodeClasses|merge(['active']) -%}
			    {%- endif -%}
			    {%- if node.level == 1 and index == 1 -%}
			        {%- set nodeClasses = nodeClasses|merge(['first']) -%}
			    {%- endif -%}
			    {%- if node.listClass|length -%}
			        {%- set nodeClasses = nodeClasses|merge([node.listClass]) -%}
			    {%- endif -%}

			    <li{% if nodeClasses|length %} class="{{ nodeClasses|join(' ') }}"{% endif %}>
			        <a href="{{ node.url }}" title="{{ node.name }}"{% if node.blank %} target="_blank"{% endif %}>{{ node.name }}</a>
			        {% if node.hasChildren %}
			            <ul class="nav__level{{ (node.level + 1) }}">
			                {% for subnode in node.children %}
			                    {{ _self.addNodeToNavigation(subnode, loop.index) }}
			                {% endfor %}
			            </ul>
			        {% endif %}
			    </li>
			{% endmacro %}

				<ul id="desktop_nav-ul">
					{% for node in nav %}
							{{ _self.addNodeToNavigation(node, loop.index) }}
					{% endfor %}

					<span class="menu-logo">
						{{craft.inlin.er(footer.ikon[0].url, true) | raw }}
					</span>

				</ul>

				<a href="/" id="menu-btn">Meny</a>
				<div class="menu-locals">

						<a href="{{ siteSwitcher('default', entry) }}">
							<span class="icon_select icon_nor">
								{{craft.inlin.er("/static/svg/symbols/icon_norflag.svg") | raw }}
							</span>
						</a>
							<a href="{{ siteSwitcher('english', entry) }}">
								<span class="icon_select icon_eng">
									{{craft.inlin.er("/static/svg/symbols/icon_engflag.svg") | raw }}
								</span>
							</a>
				</div>

				<div class="hidden">Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>

			</nav>
		</header>

		{% block content %}
			<p>Du mangler innhold</p>
		{% endblock %}
	<!--[if lt IE 9]> <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script> <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script> <![endif]-->

		<footer class="row">
			<span>
				{{craft.inlin.er(footer.ikon[0].url, true) | raw }}
			</span>
				<div>{{footer.rikTekst}}</div>
			</div>
		</footer>
		<aside class="scroll-to-top">
			{{craft.inlin.er('/static/svg/symbols/scroll-to-top.svg') | raw }}
			<span>Til toppen</span>
		</aside>

		<script>
			loadCSS("{{ craft.stamp.er('/dist/css/main.css', 'query') }}");
			requirejs(["main"]);
		</script>
		<script async defer src="https://maps.googleapis.com/maps/api/js?key={{craft.simpleMap.apiKey}}" type="text/javascript"></script>

	</body>
</html>
